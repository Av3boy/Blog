<div class="nav-item px-3">
    <NavLink class="nav-link" href="@Link">
        <span class="@Icon" aria-hidden="true"></span> @Title
    </NavLink>
</div>

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Link { get; set; }

    [Parameter]
    public string? Icon { get; set; }
}