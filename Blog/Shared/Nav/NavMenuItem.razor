<NavLink class="nav-link nav-item" href="@Link" style="padding-left: 1em;">
    <span class="@Icon" aria-hidden="true"></span> @Title
</NavLink>

@code {
    /// <summary></summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary></summary>
    [Parameter]
    public string? Link { get; set; } = string.Empty;

    /// <summary></summary>
    [Parameter]
    public string? Icon { get; set; }
}